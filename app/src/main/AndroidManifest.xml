<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.maonamassa.olharhorizontal">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Olhar Horizontal"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name=".activities.FormActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.ListaActivity"
            android:theme="@style/AppTheme">


        </activity>

        <activity
            android:name=".activities.DetalhesActivity"
            android:theme="@style/AppThemeNoBar"></activity>

        <activity
            android:name=".activities.BuscaActivity"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".activities.CadastroActivity"
            android:theme="@style/AppTheme"></activity>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>
